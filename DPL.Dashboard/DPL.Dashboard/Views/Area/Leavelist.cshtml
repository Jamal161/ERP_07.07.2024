    <script>









        $(document).ready(function () {
            loadData('all');
        });


        var currentPage = 1;
        var currentStatus = 'all';



        function loadData(status, page = 1, pageSize = 25) {
            var startIndex = (page - 1) * pageSize;
            var endIndex = startIndex + pageSize;

            $.ajax({
                url: "/Leave/mGetLeaveUserList",
                type: "GET",
                contentType: 'application/json;charset=utf-8',
                dataType: "json",
                success: function (result) {

                    //console.log(result)



                    result.sort(function (a, b) {
                        return new Date(b.intPAY_LEAVE_SERIAL) - new Date(a.intPAY_LEAVE_SERIAL);
                    });





                    var slicedData = result.slice(startIndex, endIndex);

                    var html = '';
                    $.each(slicedData, function (key, item) {
                        if (status === 'all' || item.strAPPROVED_STATUS.toLowerCase() === status) {
                         

                            html += '<tr>';
                            html += '<td> <input type="checkbox" class="checkbox" value="1"/> </td>';
                            html += '<td> <div class=" d-inline-block" style="width: 250px;"> ' +item.strEMP_CARD_NO +  ' - ' +item.strEMP_NAME +' </div>  </td>';
                            html += '<td>' + item.strFROM_DATE + '</td>';
                            html += '<td>' + item.strLEAVE_ID + '</td>';
                            html += '<td>' + item.strFROM_DATE + '</td>';
                            html += '<td>' + item.strTO_DATE + '</td>';
                            html += '<td>' + item.intNO_OF_DAYS + '</td>';
                            html += '<td>  <div class=" d-inline-block" style="width: 150px;">' + item.strCOMMENTS + '</div></td>';
                            html += '<td>' + item.strAPPROVED_STATUS + '</td>';
                            html += '<td>' + item.strRES_PEREMP_CARD_NO + '</td>';
                           
                            var jsonString = JSON.stringify(item.strEMP_CARD_NO);

                            html += '<td > <div class="dropdown"><button class=" dropdown-toggle" type="button" data-toggle="dropdown"> <i class="fa fa-ellipsis-v" aria-hidden="true"></i></button><ul class="dropdown-menu"><li><a href="#" id="btnUpdate"  onclick="return Update(' + item.intPAY_LEAVE_SERIAL + ')">Approve</a></li><br><li><a href="#" id="btnUpdate1"  onclick="return Update1(' + item.intPAY_LEAVE_SERIAL + ')">Reject</a></li></ul></div> </td>';


                            html += '</tr>';
                        }
                    });

                    $('.tbody').html(html);

                    updatePaginationControls(page, pageSize, result.length);

                },


                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }


            $('#btnShowAll').on('click', function () {
                loadData('all');
            });

            $('#btnShowApproved').on('click', function () {
                loadData('approve');
            });

            $('#btnShowRejected').on('click', function () {
                loadData('reject');
            });

            $('#btnShowPending').on('click', function () {
                loadData('Pending');
            });

            $('#btnShowIncludeReject').on('click', function () {
                loadData('all');
            });


            function updatePaginationControls(currentPage, pageSize, totalItems) {
                var totalPages = Math.ceil(totalItems / pageSize);



                $('#paginationPrevious').prop('disabled', currentPage === 1);
                $('#paginationNext').prop('disabled', currentPage === totalPages);
            }




            $('#btnShowAll').on('click', function () {
                loadData('all');
            });


            $('#paginationPrevious').on('click', function () {

                currentPage--;
                loadData(currentStatus, currentPage);
            });

            $('#paginationNext').on('click', function () {

                currentPage++;
                loadData(currentStatus, currentPage);
            });





            $('#btnShowAll').on('click', function () {
                currentStatus = 'all';
                currentPage = 1;
                loadData(currentStatus, currentPage);
            });


            $('#paginationPrevious').on('click', function () {
                if (currentPage > 1) {
                    currentPage--;
                    loadData(currentStatus, currentPage);
                }
            });

            $('#paginationNext').on('click', function () {

                var totalPages = calculateTotalPages();

                if (currentPage < totalPages) {
                    currentPage++;
                    loadData(currentStatus, currentPage);
                }
            });









            function switchStyle() {
                if (document.getElementById('styleSwitch').checked) {
                    document.getElementById('gallery').classList.add("custom");
                    document.getElementById('exampleModal').classList.add("custom");
                } else {
                    document.getElementById('gallery').classList.remove("custom");
                    document.getElementById('exampleModal').classList.remove("custom");
                }
            }








            function Update(intPAY_LEAVE_SERIAL) {


                $('#btnUpdate').show();
              

                var Obj = {


                    intPAY_LEAVE_SERIAL: intPAY_LEAVE_SERIAL,
                    strAPPROVED_STATUS: "Approve",



                };

                console.log(Obj)

                $.ajax({
                    url: "/Leave/mUpdateLeaveStatus" ,
                    data: JSON.stringify(Obj),
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        loadData();
                        $('#myModal').modal('hide');
                        $("#intPAY_LEAVE_SERIAL").append(result.intPAY_LEAVE_SERIAL);
                        $('#strAPPROVED_STATUS').val("");


                        location.reload();

                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }



            function Update1(intPAY_LEAVE_SERIAL) {


                $('#btnUpdate1').show();





                var Obj = {


                    intPAY_LEAVE_SERIAL: intPAY_LEAVE_SERIAL,
                    strAPPROVED_STATUS: "Reject",



                };




                $.ajax({
                    url: "/Leave/mUpdateLeaveStatus" ,
                    data: JSON.stringify(Obj),
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        loadData();
                        $('#myModal').modal('hide');

                        $("#intPAY_LEAVE_SERIAL").append(result.intPAY_LEAVE_SERIAL);
                        $('#strAPPROVED_STATUS').val("");
                        

                        location.reload();



                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }








    </script>


