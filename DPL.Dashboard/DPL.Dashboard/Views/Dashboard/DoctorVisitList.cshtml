        function loadData(status, page = 1, pageSize = 15) {
            var startIndex = (page - 1) * pageSize;
            var endIndex = startIndex + pageSize;

            $.ajax({
                url: "/DoctorVisitType/mGetDoctorVisitList",
                type: "GET",
                contentType: 'application/json;charset=utf-8',
                dataType: "json",
                success: function (result) {
                    console.log(result)

                    result.sort(function (a, b) {
                        return new Date(b.strSerialNO) - new Date(a.strSerialNO);
                    });

                    var slicedData = result.slice(startIndex, endIndex);

                    var html = '';
                    $.each(slicedData, function (key, item) {
                        if (status === 'all' || item.strSTATUS.toLowerCase() === status) {

                            var rowClass = (item.strSTATUS.toLowerCase() === 'pending') ? 'pending-row' : '';

                            html += '<tr class="' + rowClass + '">';


                            if (item.strSTATUS.toLowerCase() === 'pending') {
                                html += '<td> <a href="#" class="btnUpdateBtn" data-vist-id="' + item.strSerialNO + '"  data-Actions-id="' + item.strSTATUS + '"> <input type="checkbox" class="select_all" value="' + item.strSERIAL_NO + '"/> </a> </td>';
                            } else {
                                html += '<td></td>';
                            }

                            html += '<td>' + item.strSerialNO + '</td>';
                            html += '<td><div class="h-0 d-inline-block" style="width: 80px;">' + item.strUSER_NAME + '<br>' + item.strEMP_CARD_NO + '</div></td>';
                            html += '<td><div class="h-0 d-inline-block" style="width: 80px;">' + item.strVISITED_WITH + '</div></td>';
                            html += '<td><div class="h-0 d-inline-block" style="width: 220px;">' + item.strDOCTOR_NAME.replace(/(,)/g, '$1<br>') + '</div></td>';
                            html += '<td>' + item.strINSTITUTE + '</td>';
                            html += '<td>' + item.strCHAMBER + '</td>';
                            html += '<td>' + item.strMARKET + '</td>';
                            html += '<td><div class="h-0 d-inline-block" style="width: 80px;">' + item.strVISITED_AT + '</div></td>';
                            html += '<td>' + item.strShift + '</td>';
                            html += '<td><a href="https://www.google.com/maps/search/' + item.strLocation + '" onclick="Show(' + item.strLOCATION + ')" target="_blank"><mark>' + item.strLOCATION + '</mark></a></td>';
                            html += '<td>' + item.strDISTATNCE + '</td>';
                            html += '<td>' + item.strNOTE + '</td>';
                            html += '<td>' + item.strSTATUS + '</td>';

                            html += '<td><a href="#" class="btnUpdateBtn" data-vist-id="' + item.strSerialNO + '"  data-Actions-id="' + item.strSTATUS + '"><button type="button" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i></button></a></td>';
                            html += '</tr>';
                        }
                    });

                    $('.tbody').html(html);

                    updatePaginationControls(page, pageSize, result.length);
                },

                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }

            function updatePaginationControls(currentPage, totalItems) {
                var totalPages = Math.ceil(totalItems / pageSize);
                $('#paginationPrevious').prop('disabled', currentPage === 1);
                $('#paginationNext').prop('disabled', currentPage === totalPages);
            }

            function updatePaginationControls(currentPage, pageSize, totalItems) {
                var totalPages = Math.ceil(totalItems / pageSize);



                $('#paginationPrevious').prop('disabled', currentPage === 1);
                $('#paginationNext').prop('disabled', currentPage === totalPages);
            }


            $('#btnShowAll').on('click', function () {
                currentStatus = 'all';
                currentPage = 1;
                loadData(currentStatus, currentPage);
                $('.select_all').hide();
            });

            $('#paginationPrevious').on('click', function () {

                currentPage--;
                loadData(currentStatus, currentPage);
            });

