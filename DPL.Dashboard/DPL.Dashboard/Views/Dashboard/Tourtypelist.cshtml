        <script>


            $(document).ready(function () {
                var pageSize = 15; // Define pageSize locally within the document ready function

                loadData('all', 1, pageSize); // Load all data initially

                // Event handlers for filtering and pagination...
                $('#btnShowAll').on('click', function () {
                    currentStatus = 'all';
                    currentPage = 1;
                    loadData(currentStatus, currentPage, pageSize);
                });

                $('#btnShowActive').on('click', function () {
                    currentStatus = 'Active';
                    currentPage = 1;
                    loadData(currentStatus, currentPage, pageSize);
                });

                $('#btnShowInactive').on('click', function () {
                    currentStatus = 'Inactive';
                    currentPage = 1;
                    loadData(currentStatus, currentPage, pageSize);
                });

                $('#paginationPrevious').on('click', function () {
                    if (currentPage > 1) {
                        currentPage--;
                        loadData(currentStatus, currentPage, pageSize);
                    }
                });

                $('#paginationNext').on('click', function () {
                    var totalPages = calculateTotalPages(totalItems, pageSize);
                    if (currentPage < totalPages) {
                        currentPage++;
                        loadData(currentStatus, currentPage, pageSize);
                    }
                });
            });

            function loadData(status, page, pageSize) {
                var startIndex = (page - 1) * pageSize;
                var endIndex = startIndex + pageSize;

                $.ajax({
                    url: "/Tour/mGetTourList",
                    type: "POST",
                    contentType: 'application/json;charset=utf-8',
                    dataType: "json",
                    success: function (result) {
                        var filteredData = filterDataByStatus(result, status);

                        filteredData.sort(function (a, b) {
                            return new Date(b.intSERIAL_NO) - new Date(a.intSERIAL_NO);
                        });

                        var slicedData = filteredData.slice(startIndex, endIndex);

                        var html = '';
                        $.each(slicedData, function (key, item) {
                            html += '<tr>';
                            html += '<td> <div class="h-25 d-inline-block" style="width: 550px;"> ' + item.strTOUR_NAME + '</div></td>';
                            html += '<td>' + item.strTOUR_STATUS + '</td>';
                            html += '<td><a href="#" class="btnUpdateBtn" data-vist-id="' + item.intSERIAL_NO + '" data-Name-id="' + item.strTOUR_NAME + '" data-Actions-id="' + item.strTOUR_STATUS + '"><button type="button" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i></button></a></td>';
                            html += '</tr>';
                        });

                        $('.tbody').html(html);

                        updatePaginationControls(page, filteredData.length, pageSize);
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }

            function filterDataByStatus(data, status) {
                if (status === 'Active') {
                    return data.filter(item => item.strTOUR_STATUS === 'Active');
                } else if (status === 'Inactive') {
                    return data.filter(item => item.strTOUR_STATUS === 'Inactive');
                } else {
                    return data;
                }
            }

            function updatePaginationControls(currentPage, totalItems, pageSize) {
                var totalPages = calculateTotalPages(totalItems, pageSize);
                $('#paginationPrevious').prop('disabled', currentPage === 1);
                $('#paginationNext').prop('disabled', currentPage === totalPages);
            }

            function calculateTotalPages(totalItems, pageSize) {
                return Math.ceil(totalItems / pageSize);
            }



