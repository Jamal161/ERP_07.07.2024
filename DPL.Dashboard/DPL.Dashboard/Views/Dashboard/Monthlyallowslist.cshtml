            var currentStatus = 'all';
            var currentPage = 1;
            var pageSize = 10; 

            function loadData() {
                $.ajax({
                    url: "/Expense/GetMonthlyAllowancesList",
                    type: "GET",
                    contentType: 'application/json;charset=utf-8',
                    dataType: "json",
                    success: function (result) {
                        var filteredData = filterDataByStatus(result.Data, currentStatus);
                        var paginatedData = paginateData(filteredData, currentPage, pageSize);

                        var html = '';
                        $.each(paginatedData, function (index, item) {
                            html += '<tr>';
                            html += '<td>' + item.strEXPENSEID + '</td>';
                            html += '<td>' + item.strUSER_NAME + '</td>';
                            html += '<td>' + item.strALLOWANCE + '</td>';
                            html += '<td>' + item.strACTIONS + '</td>';
                            html += '<td> <button type="button" class="btn btn-danger delete" data-id="' + item.strEXPENSEID + '">Delete</button></td>';
                            html += '</tr>';

                         

                        });
                        $('.tbody').html(html);

                        updatePaginationControls(currentPage, filteredData.length);
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }

            function filterDataByStatus(data, status) {
                if (status === 'Active') {
                    return data.filter(item => item.strActions === 'Active');
                } else if (status === 'Inactive') {
                    return data.filter(item => item.strActions === 'Inactive');
                } else {
                    return data;
                }
            }

            function paginateData(data, page, pageSize) {
                var startIndex = (page - 1) * pageSize;
                return data.slice(startIndex, startIndex + pageSize);
            }

            function updatePaginationControls(currentPage, totalItems) {
                var totalPages = Math.ceil(totalItems / pageSize);
                $('#paginationPrevious').prop('disabled', currentPage === 1);
                $('#paginationNext').prop('disabled', currentPage === totalPages);
            }

            $('#btnShowAll').on('click', function () {
                currentStatus = 'all';
                currentPage = 1;
                loadData();
            });

            $('#btnShowActive').on('click', function () {
                currentStatus = 'Active';
                currentPage = 1;
                loadData();
            });

            $('#btnShowInactive').on('click', function () {
                currentStatus = 'Inactive';
                currentPage = 1;
                loadData();
            });

            $('#paginationPrevious').on('click', function () {
                if (currentPage > 1) {
                    currentPage--;
                    loadData();
                }
            });

            $('#paginationNext').on('click', function () {
                currentPage++;
                loadData();
            });

            





