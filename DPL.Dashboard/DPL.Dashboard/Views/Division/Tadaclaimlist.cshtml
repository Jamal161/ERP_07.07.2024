                success: function (result) {

                    console.log(result)

                    var slicedData = result.slice(startIndex, endIndex);

                    var html = '';
                    $.each(slicedData, function (key, item) {

                        var pendingData = result.filter(item => item.strACTIONS.toLowerCase() === 'pending');
