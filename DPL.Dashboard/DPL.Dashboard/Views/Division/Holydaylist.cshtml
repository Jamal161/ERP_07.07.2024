        function loadData(status, page = 1, pageSize = 15, totalItems) {
            var startIndex = (page - 1) * pageSize;
            var endIndex = startIndex + pageSize;

            $.ajax({
                url: "/Leave/mGetHolyDay",
                type: "POST",
                contentType: 'application/json;charset=utf-8',
                dataType: "json",
                success: function (result) {
                    // Filter holidays of the current year
                    var currentYear = new Date().getFullYear();
                    var currentYearHolidays = result.filter(function (item) {
                        return new Date(item.strHOLIDAY_DATE).getFullYear() === currentYear;
                    });

                    // Sort the current year's holidays by date, with the most recent ones first
                    currentYearHolidays.sort(function (a, b) {
                        return new Date(b.strHOLIDAY_DATE) - new Date(a.strHOLIDAY_DATE);
                    });

                    // Filter holidays of other years
                    var otherYearHolidays = result.filter(function (item) {
                        return new Date(item.strHOLIDAY_DATE).getFullYear() !== currentYear;
                    });

                    // Concatenate the sorted holidays
                    var sortedHolidays = currentYearHolidays.concat(otherYearHolidays);

                    var slicedData = sortedHolidays.slice(startIndex, endIndex);
                    var html = '';
                    $.each(slicedData, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + item.intSERIAL_NO + '</td>';
                        html += '<td>' + item.strDESCRIPTION + '</td>';
                        html += '<td>' + item.strHOLIDAY_DATE + '</td>';
                        html += '<td><div class="h-0 d-inline-block" style="width: 150px;">' + item.strDIVISION_NAME + '</div></td>';
                        html += '</tr>';
                    });

                    $('.tbody').html(html);
                    updatePaginationControls(page, pageSize, sortedHolidays.length);
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }



